<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Purple_Teal_Theme" parent="Theme.Material3.DynamicColors.Light">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="floatingActionButtonStyle">@style/floating_action_button_style</item>
        <item name="spinnerStyle">@style/bright_spinner_style</item>
    </style>

    <style name="BrightTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">#f6f6f6</item>
        <item name="colorPrimaryVariant">#e0e0e0</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#64b5f6</item>
        <item name="colorSecondaryVariant">#2196f3</item>
        <item name="colorOnSecondary">#ffffff</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="spinnerStyle">@style/bright_spinner_style</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents">
        <!-- Customize your dark theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#ffffff</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1e88e5</item>
        <item name="colorSecondaryVariant">#1565c0</item>
        <item name="colorOnSecondary">#ffffff</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="windowNoTitle">true</item>
        <item name="spinnerStyle">@style/dark_spinner_style</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidClient" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_purple</item>
        <item name="colorPrimaryVariant">@color/light_purple_variation</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="floatingActionButtonStyle">@style/floating_action_button_style</item>
        <item name="spinnerStyle">@style/bright_spinner_style</item>
    </style>

    <style name="Theme.AndroidClient" parent="Base.Theme.AndroidClient" />


</resources>